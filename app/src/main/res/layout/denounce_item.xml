<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@color/black"    >

    <ImageView
        android:id="@+id/imagedenounce"
        android:layout_width="131dp"
        android:layout_height="142dp"
        android:src="@drawable/denuncia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:text="cep"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imagedenounce"
        app:layout_constraintTop_toTopOf="@+id/imagedenounce" />

    <TextView
        android:id="@+id/labelstreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:text="Rua"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imagedenounce"
        app:layout_constraintTop_toBottomOf="@+id/itemtitle" />

    <TextView
        android:id="@+id/labelbairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:text="Bairro"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imagedenounce"
        app:layout_constraintTop_toBottomOf="@+id/labelstreet" />

    <TextView
        android:id="@+id/labelcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:text="Cidade e estado"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imagedenounce"
        app:layout_constraintTop_toBottomOf="@+id/labelbairro" />

    <TextView
        android:id="@+id/labelcomplement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:text="Complemento"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imagedenounce"
        app:layout_constraintTop_toBottomOf="@+id/labelcity" />

    <TextView
        android:id="@+id/labelid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CÃ³digo"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/labelnote"
        app:layout_constraintTop_toBottomOf="@+id/imagedenounce"
        app:layout_constraintVertical_bias="0.0"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/labelnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obs"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/imagedenounce"
        app:layout_constraintTop_toBottomOf="@+id/labelid" />


</androidx.constraintlayout.widget.ConstraintLayout>